<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".imake.Activity.Activity.ProfActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnOpConta"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                android:background="@drawable/botao_secundario"
                android:drawableTint="@color/colorPrimary"
                android:drawableTop="@drawable/ic_settings_black_24dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPerfil"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@color/basicColor3"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txtAlterarFoto"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sfprodisplay_semibold"
                    android:textSize="18sp"
                    android:textColor="@color/texto"
                    android:text="Alterar foto"/>

                <ImageButton
                    android:id="@+id/imgbConfirmar"
                    android:layout_width="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/confirmar"
                    android:backgroundTint="#55ACEF"
                    android:layout_height="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgStar1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/starvoid"
                    />
                <ImageView
                    android:id="@+id/imgStar2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/starvoid"
                    />
                <ImageView
                    android:id="@+id/imgStar3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/starvoid"
                    />
                <ImageView
                    android:id="@+id/imgStar4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/starvoid"
                    />
                <ImageView
                    android:id="@+id/imgStar5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/starvoid"
                    />
                <TextView
                    android:textSize="20dp"
                    android:id="@+id/txtAvaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/txtNome"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Usuário"
                android:fontFamily="@font/sfprodisplay_bold"
                android:textSize="22sp"
                android:textColor="@color/texto"/>

            <TextView
                android:id="@+id/txtEmail"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Endereço de Email"
                android:fontFamily="@font/sfprodisplay_regular"
                android:textSize="18sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/txtNMakes"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_gravity="center"
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/txtCategoria"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="18sp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnVerFotos"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bordas_botoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="180dp"
                android:text="Adicionar e ver fotos"
                android:drawableStart="@drawable/ic_photo_library_black_24dp"
                android:drawableTint="@android:color/white"
                android:drawablePadding="10dp"
                android:paddingStart="16dp"
                android:paddingEnd="30dp"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>