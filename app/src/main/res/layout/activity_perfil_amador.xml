<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".imake.Activity.Activity.PerfilAmadorActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txtNome"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Usuário"
            android:fontFamily="@font/sfprodisplay_bold"
            android:textSize="22sp"
            android:textColor="@color/texto"/>

        <TextView
            android:id="@+id/txtEmail"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Endereço de Email"
            android:fontFamily="@font/sfprodisplay_regular"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="iMakes: "
                android:fontFamily="@font/sfprodisplay_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txtNMakes"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sfprodisplay_regular"
                android:text="0"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_gravity="center"
                android:text="Categoria: "
                android:fontFamily="@font/sfprodisplay_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txtCategoria"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/sfprodisplay_regular"
                android:text="0"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <Button
                android:id="@+id/btnVerFotos"
                android:background="@drawable/bordas_botoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver fotos"
                android:paddingStart="16dp"
                android:paddingEnd="30dp"
                android:drawableStart="@drawable/ic_photo_library_black_24dp"
                android:drawableTint="@android:color/white"
                android:drawablePadding="10dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>